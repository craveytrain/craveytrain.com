html(lang="en").no-js

	head
		meta(charset: 'utf-8')
		//- Fix this with headers
		meta(http-equiv: 'X-UA-Compatible', content: 'IE=edge,chrome=1')
		title= page.title
		meta(name: 'description', content: '')
		meta(name: 'author', content: 'Mike Cravey')
		meta(name: 'viewport', content: 'width=device-width, initial-scale=1.0')
		link(rel: 'stylesheet', href: '/css/style.css')
		//script(src: '/js/libs/modernizr.js')
	body(id: page.bodyId, class: page.bodyClass)
		header#siteHead(role: 'nav')
			div#logo craveytrain
			nav.siteNav
				ul
					- var home = (page.bodyId === 'home') ? 'selected' : '';
					li(class: home)
						a(href: '/') Home
							span.tail
					- var posts = (page.bodyId === 'posts') ? 'selected' : '';
					li(class: posts)
						a(href: '/posts') Posts
							span.tail
					- var about = (page.bodyId === 'about') ? 'selected' : '';
					li(class: about)
						a(href: '/about') About
							span.tail
					- var contact = (page.bodyId === 'contact') ? 'selected' : '';
					li(class: contact)
						a(href: '/contact') Contact
							span.tail
		section.main(role: 'main')!= body

