ul.posts
- each post in posts
	li
		h2
			a(href: '/posts/' + post._id) #{post.title}
		p!= post.excerpt
		p.metadata
			span.timestamp= post.timestamp.toRelative()
			ul.tags
				- var iLastTag = post.tags.length - 1
				- each tag, i in post.tags
					li
						a(href: '/tags/' + tag)= "#" + tag
						- if (i < iLastTag)
							|	,&nbsp;
