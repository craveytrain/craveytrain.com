---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: page
css: posts.css
eleventyComputed:
  title: Tagged "{{ tag }}"
permalink: /tags/{{ tag | slugify }}/
---

{% set posts = collections[tag] | reverse %}
{% include "post-list-grouped.njk" %}

<div class="section-grid">
  <div class="section-label">&nbsp;</div>
  <a href="/tags/" class="view-all">View all tags &rarr;</a>
</div>
