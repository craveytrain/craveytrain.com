{
		"name": "craveytrain.com",
		"version": "8.0.0",
		"description": "The personal site of Mike Cravey (@craveytrain).",
		"main": "index.js",
		"scripts": {
				"dev": "sapper dev",
				"build": "sapper build --legacy",
				"export": "sapper export --legacy",
				"start": "node __sapper__/build",
				"cy:run": "cypress run",
				"cy:open": "cypress open",
				"test": "run-p --race dev cy:run",
				"lint": "run-p lint:*",
				"lint:js": "eslint '**/*.{js,svelte,html}'  --fix",
				"lint:css": "stylelint '**/*.{css,html,svelte}' --fix",
				"format": "prettier --config .prettierrc --write '**/*.{js,md,html,css,json}'",
				"precommit": "lint-staged",
				"upgrade-interactive": "npm-check -u"
		},
		"husky": {
				"hooks": {
						"pre-commit": "lint-staged"
				}
		},
		"lint-staged": {
				"*.{md,json}": "prettier --write",
				"*.{js,css,html,svelte}": [
						"prettier --write",
						"stylelint --fix",
						"eslint --cache --fix"
				]
		},
		"repository": {
				"type": "git",
				"url": "git+https://github.com/craveytrain/craveytrain.com.git"
		},
		"keywords": [
				"blog",
				"craveytrain"
		],
		"author": "Mike Cravey <mike@craveytrain.com>",
		"license": "MIT",
		"bugs": {
				"url": "https://github.com/craveytrain/craveytrain.com/issues"
		},
		"homepage": "https://github.com/craveytrain/craveytrain.com",
		"dependencies": {
				"compression": "^1.7.1",
				"gray-matter": "^4.0.2",
				"polka": "next",
				"sirv": "^0.4.0"
		},
		"devDependencies": {
				"@babel/core": "^7.0.0",
				"@babel/plugin-syntax-dynamic-import": "^7.0.0",
				"@babel/plugin-transform-runtime": "^7.0.0",
				"@babel/preset-env": "^7.0.0",
				"@babel/runtime": "^7.0.0",
				"@rollup/plugin-babel": "^5.0.0",
				"@rollup/plugin-commonjs": "^12.0.0",
				"@rollup/plugin-node-resolve": "^8.0.0",
				"@rollup/plugin-replace": "^2.2.0",
				"eslint": "^7.4.0",
				"eslint-config-prettier": "^6.11.0",
				"eslint-plugin-cypress": "^2.11.1",
				"eslint-plugin-html": "^6.0.2",
				"eslint-plugin-svelte3": "^2.7.3",
				"husky": "^4.2.5",
				"lint-staged": "^10.2.11",
				"npm-check": "^5.9.2",
				"npm-run-all": "^4.1.5",
				"prettier": "^2.0.5",
				"prettier-plugin-svelte": "^1.1.0",
				"rehype-prism": "^0.1.1",
				"rehype-stringify": "^8.0.0",
				"remark-parse": "^8.0.3",
				"remark-rehype": "^7.0.0",
				"remark-slug": "^6.0.0",
				"rollup": "^2.3.4",
				"rollup-plugin-svelte": "^5.0.1",
				"rollup-plugin-svelte-svg": "^0.2.3",
				"rollup-plugin-terser": "^5.3.0",
				"sapper": "^0.27.0",
				"stylelint": "^13.6.1",
				"stylelint-config-recommended": "^3.0.0",
				"svelte": "^3.0.0",
				"unified": "^9.1.0",
				"unified-stream": "^1.0.6"
		}
}
