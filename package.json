{
		"name": "craveytrain.com",
		"version": "8.0.0",
		"description": "The personal site of Mike Cravey (@craveytrain).",
		"main": "index.js",
		"scripts": {
				"clean": "rimraf _site",
				"dev:css": "postcss css -d _site/css -w",
				"dev:11ty": "ELEVENTY_ENV=development eleventy --watch --quiet",
				"dev:serve": "browser-sync start --server ./_site -w --no-open --no-notify",
				"dev": "npm-run-all clean --parallel dev:*",
				"build:css": "postcss css -d _site/css --verbose",
				"build:11ty": "ELEVENTY_ENV=production eleventy",
				"build": "npm-run-all clean --parallel build:*",
				"serve": "sirv _site -p 3000",
				"prod": "run-s build serve",
				"debug": "DEBUG=* eleventy",
				"format": "prettier --write .",
				"lint": "run-p lint:*",
				"lint:js": "eslint --fix '**/*.js'",
				"lint:css": "stylelint --fix '**/*.css'",
				"upgrade-interactive": "npm-check -u",
				"postinstall": "husky install"
		},
		"husky": {
				"hooks": {
						"pre-commit": "lint-staged"
				}
		},
		"lint-staged": {
				"*.js": "eslint --cache --fix",
				"*.css": "stylelint --allow-empty-input",
				"*.{css,html,js,json,md,yaml}": "prettier --write"
		},
		"repository": {
				"type": "git",
				"url": "git+https://github.com/craveytrain/craveytrain.com.git"
		},
		"keywords": [
				"blog",
				"craveytrain"
		],
		"author": "Mike Cravey <mike@craveytrain.com>",
		"license": "MIT",
		"bugs": {
				"url": "https://github.com/craveytrain/craveytrain.com/issues"
		},
		"homepage": "https://github.com/craveytrain/craveytrain.com",
		"devDependencies": {
				"@11ty/eleventy": "^0.12.1",
				"@11ty/eleventy-navigation": "^0.1.6",
				"@11ty/eleventy-plugin-rss": "^1.1.1",
				"@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
				"browser-sync": "^2.26.13",
				"eleventy-plugin-svg-contents": "^0.7.0",
				"eslint": "^7.22.0",
				"eslint-config-prettier": "^8.1.0",
				"eslint-plugin-html": "^6.1.2",
				"husky": "^5.2.0",
				"lint-staged": "^10.5.3",
				"npm-check": "^5.9.2",
				"npm-run-all": "^4.1.5",
				"postcss": "^8.2.8",
				"postcss-cli": "^8.3.1",
				"postcss-csso": "^5.0.0",
				"postcss-nesting": "^7.0.1",
				"prettier": "^2.2.1",
				"rimraf": "^3.0.2",
				"sirv-cli": "^1.0.10",
				"stylelint": "^13.12.0",
				"stylelint-config-prettier": "^8.0.2",
				"stylelint-config-standard": "^21.0.0"
		}
}
